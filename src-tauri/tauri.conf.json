{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "image-editor-archi",
	"version": "1.1.0",
	"identifier": "com.omninexus.image-editor-archi",
	"build": {
		"beforeDevCommand": "pnpm dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "pnpm build",
		"frontendDist": "../dist",
		"removeUnusedCommands": true
	},
	"app": {
		"windows": [
			{
				"title": "Editor de Imagem | Arch√≠",
				"width": 800,
				"height": 600,
				"dragDropEnabled": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
